<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

    <com.peng.meishi.widget.MyAsymmetricGridView
        android:id="@+id/view_HomeMiddle_Gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:dividerHeight="5dp"
        android:divider="@null"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_HomeMiddle_title"/>

    <TextView
        android:id="@+id/view_HomeMiddle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="热门标签"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/view_HomeMiddle_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/doubleright"
        android:text="更多"
        android:textColor="@color/MGray"
        android:textSize="@dimen/smallsize"/>


</RelativeLayout>
